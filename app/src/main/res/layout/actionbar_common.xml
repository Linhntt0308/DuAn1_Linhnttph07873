<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="0dp"
    android:background="#000000"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="46dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_back" />

    <FrameLayout
        android:id="@+id/fm_user"
        android:layout_width="100dp"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_numberAnswer"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/avatar_icon"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="0"
            android:textColor="#FF9800"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/button_user_press" />


    </FrameLayout>

    <TextView
        android:id="@+id/txt_suggest"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:background="@drawable/suggest_button_click"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mTv_heart"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:background="@drawable/heart_click"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bg_music" />

    <TextView
        android:id="@+id/txt_point"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:background="@drawable/coin_icon"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="6dp"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>
</LinearLayout>